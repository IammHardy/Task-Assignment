<%= form_with model: task, url: tasks_path, data: { turbo: true } do |f| %>

  <% if task&.errors&.any? %>
    <div class="errors">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 3 %>
  </div>

  <div>
    <%= f.label :user_id, "Assign to" %><br>
    <%= f.select :user_id,
        employees.map { |e| [e.name, e.id] },
        include_blank: "Select employee" %>
  </div>

  <div>
    <%= f.label :status %><br>
    <%= f.select :status, ["pending", "in_progress", "completed"] %>
  </div>

  <div>
    <%= f.label :due_date %><br>
    <%= f.date_field :due_date %>
  </div>

  <%= f.submit "Create Task" %>

<% end %>
