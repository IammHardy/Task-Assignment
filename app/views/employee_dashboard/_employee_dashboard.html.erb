<!-- Employee Dashboard -->
<div id="employee-dashboard">
  <h2 class="text-2xl font-semibold mb-4 text-gray-700">My Tasks</h2>

  <table class="w-full table-auto border-collapse border border-gray-300 mb-8">
    <thead class="bg-gray-100">
      <tr>
        <th class="border px-4 py-2">Title</th>
        <th class="border px-4 py-2">Status</th>
        <th class="border px-4 py-2">Due Date</th>
        <th class="border px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% tasks.each do |task| %>
        <tr class="<%= task.status == 'completed' ? 'bg-green-50' : task.due_date && task.due_date < Date.today ? 'bg-red-50' : '' %>">
          <td class="border px-4 py-2"><%= task.title %></td>
          <td class="border px-4 py-2"><%= task.status.humanize %></td>
          <td class="border px-4 py-2"><%= task.due_date&.strftime("%b %d, %Y") || "N/A" %></td>
          <td class="border px-4 py-2">
            <% if task.user_id == employee.id && task.status != "completed" %>
              <%= button_to "Mark Complete",
                    mark_complete_dashboard_index_path(
                      id: task.id,
                      view: "employee",
                      employee_id: employee.id
                    ),
                    method: :patch,
                    class: "bg-green-600 text-white px-2 py-1 rounded hover:bg-green-700" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p class="text-gray-600">You can only see your assigned tasks.</p>
</div>
